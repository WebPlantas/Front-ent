<div class="content-page">
    <div class="content">
        <div class="container-fluid">
            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="/crearcontenido">Contenido </a><i class="ti ti-angle-right"></i></li>
                                <li class="breadcrumb-item active">Mis Contenidos</li>
                            </ol>
                        </div>
                        <h4 class="page-title">Mis Contenidos</h4>
                    </div>
                </div>
            </div>
            <!-- end page title -->

            <div class="row mb-2">
                <div class="col-sm-4">
                    <button type="button" class="btn btn-info btn-rounded" data-toggle="modal"
                        data-target="#bs-example-modal-lg"><i class="ti ti-plus"></i> Crear</button>
                    <div class="modal fade" id="bs-example-modal-lg" tabindex="-1" role="dialog"
                        aria-labelledby="myLargeModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h4 class="modal-title" id="myLargeModalLabel">Crear un Contenido</h4>
                                    <button type="button" class="close" data-dismiss="modal"
                                        aria-hidden="true">×</button>
                                </div>
                                <div class="modal-body">
                                    <form action="/registrarCurso" method="POST" class="form-horizontal row-border">
                                        <input type="hidden" name="id" value="{{Id}}">
                                        <div class="panel-body">
                                            <div class="form-group">
                                                <input type="text" class="form-control" id="contenido-name"
                                                    placeholder="Nombra del contenido">
                                            </div>
                                            <div class="form-group">
                                                <select name="nombreG" id="nombreG" class="form-control">
                                                    <option> SELECCIONE GRADO</option>
                                                    {{#each data}}
                                                    <option value="{{Grado}}">{{NombreG}}</option>
                                                    {{/each}}
                                                </select>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-light"
                                                data-dismiss="modal">Cancelar</button>
                                            <button type="submit" class="btn btn-info">Crear</button>
                                        </div>
                                    </form>
                                </div>
                            </div><!-- /.modal-content -->
                        </div><!-- /.modal-dialog -->
                    </div><!-- /.modal -->
                </div>
            </div>

