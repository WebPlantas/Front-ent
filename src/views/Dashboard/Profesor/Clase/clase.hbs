            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="/adminprofesor">Clase </a><i
                                        class="ti ti-angle-right"></i></li>
                                <li class="breadcrumb-item active">Mis Clases</li>
                            </ol>
                        </div>
                        <h4 class="page-title">Mis Clases</h4>
                    </div>
                </div>
            </div>
            <!-- end page title -->

            <div class="row mb-2">
                <div class="col-sm-4">
                    <a href="/adminprofesor" class="btn btn-info btn-rounded" data-toggle="modal"
                        data-target="#bs-example-modal-lg"><i class="ti ti-plus"></i> Crear</a>
                    <div class="modal fade" id="bs-example-modal-lg" tabindex="-1" role="dialog"
                        aria-labelledby="myLargeModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h4 class="modal-title" id="myLargeModalLabel">Crear una clase</h4>
                                    <button type="button" class="close" data-dismiss="modal"
                                        aria-hidden="true">×</button>
                                </div>
                                <div class="modal-body">
                                    <form action="/registerclase" method="POST" class="form-horizontal row-border">
                                        <input type="hidden" name="id" value="{{Id}}">
                                        <div class="panel-body">
                                            <div class="form-group">
                                                <input type="text" class="form-control" name="clasename" id="clasename"
                                                    placeholder="Nombra tu clase">
                                            </div>
                                            <div class="form-group">
                                                <input type="number" name="cantidadClase"
                                                    onkeypress="return soloNumeros(event)" onpaste="return false"
                                                    maxlength="2" class="form-control" min="25" max="40"
                                                    placeholder="Cantidad de estudiantes" required>
                                            </div>
                                            <div class="form-group">
                                                <select name="nombreGradoC" id="nombreGradoC" class="form-control">
                                                    <option> SELECCIONE GRADO</option>
                                                    {{#each data}}
                                                    <option value="{{Grado}}">{{NombreG}}</option>
                                                    {{/each}}
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <textarea class="form-control" name="descripcionclase" id="descripcionclase"
                                                    placeholder="Describe tu clase"></textarea>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-light"
                                                data-dismiss="modal">Cancelar</button>
                                            <button type="sumit" class="btn btn-info">Crear</button>
                                        </div>
                                    </form>
                                </div>
                            </div><!-- /.modal-content -->
                        </div><!-- /.modal-dialog -->
                    </div><!-- /.modal -->
                </div>
            </div>

