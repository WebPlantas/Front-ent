<div class="content-page">
    <div class="content">
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="/adminprofesor">Clase </a><i
                                        class="ti ti-angle-right"></i></li>
                                <li class="breadcrumb-item"><a href="/adminprofesor">Mis clases </a><i
                                        class="ti ti-angle-right"></i></li>
                                <li class="breadcrumb-item active">Detalle</li>
                            </ol>
                        </div>
                        <h4 class="page-title">Perfil Clase</h4>
                    </div>
                </div>
            </div>
            <!-- end page title -->

            <div class="row">
                <div class="col-xl-6">
                    <div class="card">
                        <div class="card-body">
                            {{#each result}}
                            <h4 class="header-title mb-3"> {{NombreC}}</h4> {{!traer el nombre de la clase}}
                            {{/each}}
                            <form>
                                <div id="basicwizard">

                                    <ul class="nav nav-pills nav-justified form-wizard-header mb-4">
                                        <li class="nav-item">
                                            <a href="#basictab1" data-toggle="tab"
                                                class="nav-link rounded-0 pt-2 pb-2 active">
                                                <i class="fas fa-unlock-alt"></i>
                                                <span class="d-none d-sm-inline">Codigo Clase</span>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a href="#basictab2" data-toggle="tab" class="nav-link rounded-0 pt-2 pb-2">
                                                <i class="fas fa-user-alt"></i>
                                                <span class="d-none d-sm-inline">Listado Estudiantes</span>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a href="#basictab3" data-toggle="tab" class="nav-link rounded-0 pt-2 pb-2">
                                                <i class="fas fa-user-cog"></i>
                                                <span class="d-none d-sm-inline">Configuración</span>
                                            </a>
                                        </li>
                                    </ul>

                                    <div class="tab-content b-0 mb-0">

                                        <div class="tab-pane active" id="basictab1">
                                            <div class="row">
                                                <div class="col-12">
                                                    <div class="text-center">
                                                        <h2 class="mt-0"><i class="fas fa-lock"></i></h2>
                                                        <h3 class="mt-0">Bienvenido !</h3>

                                                        <p class="w-75 mb-2 mx-auto">¡Empiece a construir su comunidad
                                                            de aula digital!</p>

                                                        <div class="mb-3">
                                                            <div class="custom-control custom-checkbox">
                                                                {{#each result}}
                                                                <label class="custom-control-label">{{Codigo}}</label>
                                                                {{/each}}
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div> <!-- end col -->
                                            </div> <!-- end row -->
                                        </div>

                                        <div class="tab-pane" id="basictab2">
                                            <div class="row">
                                                <div class="col-12">
                                                    <div class="card">
                                                        <div class="card-body">

                                                            <div class="table-responsive">
                                                                <div id="products-datatable_wrapper"
                                                                    class="dataTables_wrapper dt-bootstrap4 no-footer">
                                                                    <div class="row">
                                                                        <div class="col-sm-12">
                                                                            <table
                                                                                class="table table-striped table-centered mb-0">
                                                                                <thead>
                                                                                    <tr>
                                                                                        <th>Codigo</th>
                                                                                        <th>Nombre</th>
                                                                                        <th>Genero</th>
                                                                                        <th>Action</th>
                                                                                    </tr>
                                                                                </thead>
                                                                                <tbody>
                                                                                    {{#estudiantes}}
                                                                                    <tr>
                                                                                        <td> {{CODIGO}} </td>
                                                                                        <td class="table-user">
                                                                                            {{Nombres}}
                                                                                        </td>
                                                                                        <td>{{Genero}}</td>
                                                                                        <td class="table-action">
                                                                                            <a href="#/{{idEstudiante}}"
                                                                                                class="btn btn-info btn-rounded"
                                                                                                data-toggle="modal"
                                                                                                data-target="#bs-estudiante-modal-lg"><i
                                                                                                    class="ti ti-plus"></i>
                                                                                                Ver</a>
                                                                                            <!--a href="javascript: void(0);"
                                                                                                class="action-icon"> <i
                                                                                                    class="ti ti-trash"></i></a-->
                                                                                        </td>
                                                                                    </tr>
                                                                                    {{/estudiantes}}
                                                                                </tbody>
                                                                            </table>
                                                                            <div class="modal fade"
                                                                                id="bs-estudiante-modal-lg"
                                                                                tabindex="-1" role="dialog"
                                                                                aria-labelledby="myLargeModalLabel"
                                                                                aria-hidden="true">
                                                                                <div class="modal-dialog modal-lg">
                                                                                    <div class="modal-content">
                                                                                        <div class="modal-header">
                                                                                            <h4 class="modal-title"
                                                                                                id="myLargeModalLabel">
                                                                                                Notas Estudiante</h4>
                                                                                            <button type="button"
                                                                                                class="close"
                                                                                                data-dismiss="modal"
                                                                                                aria-hidden="true">×</button>
                                                                                        </div>
                                                                                        <div class="modal-body">
                                                                                                <div class="panel-body">
                                                                                                    <div
                                                                                                        class="form-group">
                                                                                                        <table class="table table-striped table-centered mb-0">
                                                                                                            <thead>
                                                                                                                <tr>
                                                                                                                    <th>Codigo
                                                                                                                        Estudiante
                                                                                                                    </th>
                                                                                                                    <th>Nombre
                                                                                                                        Evaluacion
                                                                                                                    </th>
                                                                                                                    <th>Nota
                                                                                                                    </th>
                                                                                                                </tr>
                                                                                                            </thead>
                                                                                                            <tbody>
                                                                                                                {{#notas}}
                                                                                                                <tr>
                                                                                                                    <td>{{idEstudiante}}
                                                                                                                    </td>
                                                                                                                    <td>{{Evaluacion}}
                                                                                                                    </td>
                                                                                                                    <td>
                                                                                                                        {{Nota}}
                                                                                                                    </td>
                                                                                                                </tr>
                                                                                                                {{/notas}}
                                                                                                            </tbody>
                                                                                                        </table>
                                                                                                    </div>
                                                                                                </div>
                                                                                                <div
                                                                                                    class="modal-footer">
                                                                                                    <button
                                                                                                        type="button"
                                                                                                        class="close"
                                                                                                        data-dismiss="modal"
                                                                                                        aria-hidden="true">Cerrar</button>
                                                                                                </div>
                                                                                        </div>
                                                                                    </div><!-- /.modal-content -->
                                                                                </div><!-- /.modal-dialog -->
                                                                            </div><!-- /.modal -->
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div> <!-- end card-body-->
                                                    </div> <!-- end card-->
                                                </div> <!-- end col -->
                                            </div>
                                        </div>

                                        <div class="tab-pane" id="basictab3">
                                        </div>
                                    </div> <!-- tab-content -->
                                </div> <!-- end #basicwizard-->
                            </form>
                        </div> <!-- end card-body -->
                    </div> <!-- end card-->
                </div> <!-- end col -->
            </div>
        </div>
    </div>
</div>
<!-- container -->