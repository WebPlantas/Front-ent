<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">

                        <h4 class="page-title">Perfil</h4>
                    </div>
                </div>
            </div>
            <!-- end page title -->

            <div class="row">
                <div class="col-xl-4 col-lg-5">
                    <div class="card text-center">
                        <div class="card-body">
                            {{#each data}}
                            <img src="images/Home/Login WebPlants.png" class="rounded-circle avatar-lg img-thumbnail"
                                alt="profile-image">
                            <h4 class="mb-0 mt-2">{{User}}</h4>
                            <p class="text-muted font-14">{{Rol}}</p>
                            <button type="button" class="btn btn-success btn-sm mb-2">Follow</button>
                            <button type="button" class="btn btn-danger btn-sm mb-2">Message</button>
                            <div class="text-left mt-3">
                                <p class="text-muted mb-2 font-13"><strong>Nombre completo :</strong> <span
                                        class="ml-2">{{Nombres}}</span></p>

                                <p class="text-muted mb-2 font-13"><strong>Telefono :</strong><span
                                        class="ml-2">{{Telefono}}</span></p>

                                <p class="text-muted mb-2 font-13"><strong>Email :</strong> <span
                                        class="ml-2 ">{{Email}}</span></p>

                                <p class="text-muted mb-1 font-13"><strong>Genero :</strong> <span
                                        class="ml-2">{{Genero}}</span>
                                </p>
                            </div>
                            {{/each}}
                        </div> <!-- end card-body -->
                    </div> <!-- end card -->

                </div> <!-- end col-->

                <div class="col-xl-8 col-lg-7">
                    <div class="card">
                        <div class="card-body">
                            <ul class="nav nav-pills bg-nav-pills nav-justified mb-3">
                                <li class="nav-item">
                                    <a href="#user" data-toggle="tab" aria-expanded="false" class="nav-link rounded-0">
                                        Usuario
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="#config" data-toggle="tab" aria-expanded="true"
                                        class="nav-link rounded-0 active">
                                        Configuración
                                    </a>
                                </li>
                            </ul>
                            <div class="tab-content">
                                <div class="tab-pane" id="user">
                                    <form action="/UpdateUserProfesorAdmin" method="POST">
                                        {{#each data}}
                                        <h5 class="text-uppercase" style="margin-bottom: 36px;">
                                            <i class="fas fa-user-circle"></i>
                                            {{!-- <i class="fas fa-user"></i> --}}
                                            <font style="vertical-align: inherit;">
                                                <font style="vertical-align: inherit;">
                                                    Información usuaio</font>
                                            </font>
                                        </h5>

                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="username">
                                                        <font style="vertical-align: inherit;">
                                                            <font style="vertical-align: inherit;">Usuario</font>
                                                        </font>
                                                    </label>
                                                    <input type="text" class="form-control" id="username"
                                                        name="username" value="{{User}}"
                                                        placeholder="Ingrese el usuario">
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="rol">
                                                        <font style="vertical-align: inherit;">
                                                            <font style="vertical-align: inherit;">Rol</font>
                                                        </font>
                                                    </label>
                                                    <select name="rol" class="form-control" required>
                                                        {{!-- <option value="">SELECCIONE ROL </option> --}}
                                                        <option value="{{idRol}}">{{Rol}}</option>
                                                        {{!-- <option value="2">Estudiante</option>
                                                        <option value="3">Administrador</option> --}}
                                                    </select>
                                                </div>

                                            </div> <!-- end col -->
                                        </div> <!-- end row -->

                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="userpassword">
                                                        <font style="vertical-align: inherit;">
                                                            <font style="vertical-align: inherit;">Nueva Contraseña
                                                            </font>
                                                        </font>
                                                    </label>
                                                    <input type="password" class="form-control" id="userpassword"
                                                        placeholder="Introducir nueva contraseña" name="password">
                                                </div>

                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="userpassword1">
                                                        <font style="vertical-align: inherit;">
                                                            <font style="vertical-align: inherit;">Confirmar Contraseña
                                                            </font>
                                                        </font>
                                                    </label>
                                                    <input type="password" class="form-control" id="userpassword1"
                                                        placeholder="Confirmar nueva contraseña" name="password1">
                                                </div>
                                            </div> <!-- end col -->
                                        </div> <!-- end row -->

                                        <div class="text-right">
                                            <button type="submit" class="btn btn-success mt-2">
                                                <i class="fas fa-save"></i>
                                                <font style="vertical-align: inherit;">
                                                    <font style="vertical-align: inherit;"> Salvar</font>
                                                </font>
                                            </button>
                                        </div>
                                        {{/each}}
                                    </form>
                                </div> <!-- end tab-pane -->
                                <!-- end about me section content -->
                                <div class="tab-pane show active" id="config">
                                    <form action="/UpdateProfesorAdmin" method="POST">
                                        {{#each data}}
                                        <h5 class="mb-4 text-uppercase">
                                            <i class="fas fa-user-edit"></i>
                                            <font style="vertical-align: inherit;">
                                                <font style="vertical-align: inherit;"> Información personal</font>
                                            </font>
                                        </h5>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="document">
                                                        <font style="vertical-align: inherit;">
                                                            <font style="vertical-align: inherit;">Documento</font>
                                                        </font>
                                                    </label>
                                                    <input type="number" name="document" class="form-control"
                                                        maxlength="10" onpaste="return false"
                                                        placeholder="Sin puntos ni guiones" min="1"
                                                        value="{{Identificacion}}" required>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="tipodocument">
                                                        <font style="vertical-align: inherit;">
                                                            <font style="vertical-align: inherit;">Tipo documento</font>
                                                        </font>
                                                    </label>
                                                    <select name="tipodocument" class="form-control" required>
                                                        {{!-- <option value="">SELECCIONE DOCUMENTO</option> --}}
                                                        <option value="{{idTipoDocumento}}">{{Tipo}}</option>
                                                    </select>
                                                </div>
                                            </div> <!-- end col -->
                                        </div> <!-- end row -->
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="firstname">
                                                        <font style="vertical-align: inherit;">
                                                            <font style="vertical-align: inherit;">Nombre</font>
                                                        </font>
                                                    </label>
                                                    <input type="text" name="firstname" maxlength="70"
                                                        onkeypress="return soloLetras(event)" onpaste="return false"
                                                        class="form-control" value="{{Nombre}}"
                                                        placeholder="Ingrese el nombre" required>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="lastname">
                                                        <font style="vertical-align: inherit;">
                                                            <font style="vertical-align: inherit;">Apellido</font>
                                                        </font>
                                                    </label>
                                                    <input type="text" name="lastname" maxlength="70"
                                                        onkeypress="return soloLetras(event)" onpaste="return false"
                                                        class="form-control" value="{{Apellidos}}"
                                                        placeholder="Ingrese el apellido" required>
                                                </div>
                                            </div> <!-- end col -->
                                        </div> <!-- end row -->
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="phone">
                                                        <font style="vertical-align: inherit;">
                                                            <font style="vertical-align: inherit;">Telefono</font>
                                                        </font>
                                                    </label>
                                                    <input type="phone" name="phone"
                                                        onkeypress="return soloNumeros(event)" onpaste="return false"
                                                        class="form-control" maxlength="10" placeholder="Solo números"
                                                        value="{{Telefono}}" required>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="direccion">
                                                        <font style="vertical-align: inherit;">
                                                            <font style="vertical-align: inherit;">Dirección</font>
                                                        </font>
                                                    </label>
                                                    <input type="text" name="direccion" class="form-control"
                                                        maxlength="100" value="{{Direccion}}" required>
                                                </div>
                                            </div> <!-- end col -->
                                        </div> <!-- end row -->
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="genero">
                                                        <font style="vertical-align: inherit;">
                                                            <font style="vertical-align: inherit;">Genero</font>
                                                        </font>
                                                    </label>
                                                    <select name="genero" class="form-control" required>
                                                        {{!-- <option value="">SELECCIONE GENERO </option> --}}
                                                        <option value="{{idGenero}}">{{Genero}}</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="fnacimiento">
                                                        <font style="vertical-align: inherit;">
                                                            <font style="vertical-align: inherit;">Fecha nacimiento
                                                            </font>
                                                        </font>
                                                    </label>
                                                    <input type="date" class="form-control" name="fnacimiento"
                                                        value="{{FechaNacimiento}}" required>
                                                </div>
                                            </div> <!-- end col -->
                                        </div> <!-- end row -->

                                        <div class="text-right">
                                            <button type="submit" class="btn btn-success mt-2">
                                                <i class="fas fa-save"></i>
                                                <font style="vertical-align: inherit;">
                                                    <font style="vertical-align: inherit;"> Salvar</font>
                                                </font>
                                            </button>
                                        </div>
                                        {{/each}}
                                    </form>

                                </div>
                                <!-- end timeline content-->
                            </div> <!-- end tab-content -->
                        </div> <!-- end card body -->
                    </div> <!-- end card -->
                </div> <!-- end col -->
            </div>
            <!-- end row-->

        </div>
    </div>
</div>
<!-- container -->