<ol class="breadcrumb">
    <li>
        <a href="/tematicas">Tematicas</a>
    </li>
    <li>
        <a href="/perfiltematica/{{Id}}">{{Id}}</a>
    </li>
    <span id="trigger-sidebar" class="toolbar-trigger toolbar-icon-bg pull-right">
        <a data-toggle="tooltips" title="Toggle Sidebar">
            <span class="icon-bg">
                <i class="ti ti-shift-left"></i>
            </span>
        </a>
    </span>
</ol>
<div class="page-heading">
    <h1>Perfil Tematica</h1>
    <a href="/tematicas" class="btn-warning btn pull-right">
        <</a>
</div>
<div class="container-fluid">
    <div data-widget-group="group1">
        <div class="row">
            <div class="col-sm-3">
                <div class="panel panel-profile">
                    <div class="panel-body">
                        <i class="fa fa-book" style="font-size:40px;"></i>
                        {{#each data}}
                        <div class="name">{{Nombre}}</div>
                        <div class="info">Codigo:{{ID}}</div>
                        <div class="info">Clase: {{Clase}}</div>
                        {{/each}}
                        <br>
                        <a href="/actualizartematica/{{Id}}" class="btn btn-success-alt btn-block"><i
                                class="ti ti-pencil"></i>
                            Actualizar</a>

                        <form action="/deletematica" method="POST" style="margin-top: 2px;">
                            <input type="hidden" name="Id" value="{{Id}}">
                            <button type="submit" class="btn btn-danger-alt btn-block">
                                <i class="fa fa-delete">
                                </i>
                                Eliminar
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-sm-9">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h2>Contenidos</h2>
                        <a id="newPet" href="/registrarcontenido/{{Id}}" class="btn btn-info pull-right" style="margin-top:10px;"
                            id="btnNewCur"><i class="ti ti-plus"></i>
                            <span class="hidden-xs">Nuevo Contenido</span></a>
                    </div>
                    <div class="panel-body">
                        <table class="table table-striped table-hover" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th class="text-center">Codigo</th>
                                    <th class="text-center">Nombre</th>
                                    <th class="text-center">Acci√≥n</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    {{#each result}}
                                    <td class="info text-center">{{codigo}}</td>
                                    <td class="info text-center">{{NombreC}}</td>
                                    <td class="info text-center">
                                        <a class="btn btn-success" href="/actualizarcontenido/{{ID}}">Actualizar</a>
                                        <a class="btn btn-danger" href="/actualizarcontenido/{{ID}}">Eliminar</a>
                                    </td>
                                    {{/each}}
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
</div>