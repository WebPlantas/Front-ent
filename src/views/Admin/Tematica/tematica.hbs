<ol class="breadcrumb">
    <li>
        <a href="/tematicas">Tematicas</a>
    </li>
    <span id="trigger-sidebar" class="toolbar-trigger toolbar-icon-bg pull-right">
        <a data-toggle="tooltips" data-placement="right" title="Toggle Sidebar">
            <span class="icon-bg">
                <i class="ti ti-shift-left"></i>
            </span>
        </a>
    </span>
</ol>
<div class="page-heading">
    <h1>Listado de Tematicas</h1>
    <a href="/nuevatematica" class="btn btn-info pull-right"><i class="ti ti-plus"></i>
        <span class="hidden-xs">
            Nueva Tematica
        </span>
    </a>
</div>
<div class="container-fluid" data-step="1" data-position="bottom">
    <div data-widget-group="group1">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default" style="padding:10px;">
                    <div class="panel-body no-padding">
                        <table id="clientesTable" class="table table-striped table-hover" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th>Codigo</th>
                                    <th>Nombre</th>
                                    <th>Curso</th>
                                    <th>Acci√≥n</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each data}}
                                <tr>
                                    <td>{{Id}}</td>
                                    <td>{{Nombre}}</td>
                                    <td>{{Clase}}</td>
                                    <td>
                                    <a class="btn btn-primary" href="/perfiltematica/{{Id}}">Detalle</a>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
</div>