                                    <h2>Datos del Profesor</h2>
                                    <a href="/profesores" class="btn-warning btn pull-right">
                                        <</a></div>
                                <form action="/nuevocliente" method="post" class="form-horizontal row-border">
                                    <input type="hidden" name="id" value="">
                                    <div class="panel-body">
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label">Documento</label>
                                            <div class="col-sm-3">
                                                <input type="number" name="cedulaP" class="form-control" maxlength="10"
