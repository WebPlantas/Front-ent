<ol class="breadcrumb">
    <li>
        <a href="/estudiantes">Estudiantes</a>
    </li>
    <li>
        <a href="/perfilEstudiante/{{Id}}">{{Id}}</a>
    </li>
    <span id="trigger-sidebar" class="toolbar-trigger toolbar-icon-bg pull-right">
        <a data-toggle="tooltips" title="Toggle Sidebar">
            <span class="icon-bg">
                <i class="ti ti-shift-left"></i>
            </span>
        </a>
    </span>
</ol>
<div class="page-heading">
    <h1>Perfil Estudiante</h1>
    <a href="/estudiantes" class="btn-warning btn pull-right">
        < </a>
</div>
<div class="container-fluid">
    <input type="hidden" name="Id" value=" {{Id}} ">
    <div data-widget-group="group1">
        <div class="row">
            <div class="col-sm-3">
                <div class="panel panel-profile">
                    <div class="panel-body">
                        <i class="fa fa-user" style="font-size:40px;"></i>
                        {{#each data}}
                        <div class="name">{{Nombres}}</div>
                        <div class="info">DOC:{{Identificacion}}</div>
                        <div class="info">Genero: {{Genero}}</div>
                        {{/each}}
                        <br>
                        <a href="/actualizarEstudiante/{{Id}}" class="btn btn-success-alt btn-block"><i
                                class="ti ti-pencil"></i>
                            Actualizar</a>

                        <form action="/deleteEstudiante" method="POST" style="margin-top: 2px;">
                            <input type="hidden" name="Id" value="{{Id}}">
                            <button type="submit" class="btn btn-danger-alt btn-block">
                                <i class="fa fa-delete">
                                </i>
                                Eliminar
                            </button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-sm-9">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h2>Grupos</h2>
                        <a id="newPet" href="/registrargrupo/{{Id}}" class="btn btn-info pull-right"
                            style="margin-top:10px;" id="btnNewPet"><i class="ti ti-plus"></i>
                            <span class="hidden-xs">Nuevo Grupo</span></a>
                    </div>
                    <div class="panel-body">
                        <table class="table table-striped table-hover" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th class="text-center">Codigo</th>
                                    <th class="text-center">Nombre</th>
                                    <th class="text-center">Curso</th>
                                    <th class="text-center">Accion</th>
                                </tr>
                            </thead>
                            <tbody>
                                <form action="/deletegrupo" method="post">
                                {{#each result}}
                                <tr>
                                    <td class="info text-center">{{ID}}</td>
                                    <td class="info text-center">{{Nombre}}</td>
                                    <td class="info text-center">{{Curso}}</td>
                                    <td class="info text-center">
                                        <a class="btn btn-success" href="/actualizarGrupo/{{ID}}">Actualizar</a>
                                        <button type="submit" class="btn btn-danger">
                                            Eliminar
                                        </button>
                                    </td>
                                </tr>
                                {{/each}}
                                </form>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
</div>