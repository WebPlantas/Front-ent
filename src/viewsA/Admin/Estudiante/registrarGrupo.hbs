<ol class="breadcrumb">
    <li>
        <a href="/estudiantes">Estudiantes</a>
    </li>
    <li>
        <a href="/perfilEstudiante{{Id}}">{{Id}}</a>
    </li>
    <li>
        <a href="/registrargrupo">Nuevo Grupo</a>
    </li>
    <span id="trigger-sidebar" class="toolbar-trigger toolbar-icon-bg pull-right">
        <a data-toggle="tooltips" data-placement="right" title="Toggle Sidebar">
            <span class="icon-bg">
                <i class="ti ti-shift-left"></i>
            </span>
        </a>
    </span>
</ol>
<div class="page-heading">
    <h1>Nuevo Grupo</h1>
</div>
<div class="container-fluid">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h2>Datos del Grupo</h2>
            <a href="/perfilEstudiante/{{Id}}" class="btn-warning btn pull-right">
                <</a>
        </div>
        <form action="/registrargrupo" method="POST" class="form-horizontal row-border">
            <input type="hidden" name="id" value="">
            <div class="panel-body">
                <div class="form-group">
                    <label class="col-sm-2 control-label">Nombre</label>
                    <div class="col-sm-3">
                        <input type="text" name="nombreG" onkeypress="return soloLetras(event)" onpaste="return false"
                            maxlength="50" class="form-control" required>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Codigo</label>
                    <div class="col-xs-3">
                        <input type="text" name="cantidadC" onkeypress="return soloNumeros(event)"
                            onpaste="return false" class="form-control" placeholder="Numero aleatorio" value=""
                            required>
                    </div>
                    <label class="col-sm-2 control-label">Curso</label>
                    <div class="col-sm-3">
                        <select name="idCurso" class="form-control" required>
                            <option value="">SELECCIONE CURSO</option>
                            {{#each data}}
                            <option value="{{ID}}">{{NombreC}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Fecha de Inicio</label>
                    <div class="col-xs-3">
                        <input type="date" class="form-control" name="fechaI" value="" required>
                    </div>
                    <label class="col-sm-2 control-label">Fecha de Fin</label>
                    <div class="col-xs-3">
                        <input type="date" class="form-control" name="fechaF" value="" required>
                    </div>
                </div>
            </div>

            <div class="panel-footer">
                <div class="row">
                    <div class="col-sm-8 col-sm-offset-2">
                        <button type="submit" class="btn-primary btn entity">Registrar</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $(document).ready(function () {
            $('#nacimiento').datepicker({
                format: "yyyy-mm-dd",
                weekStart: 1,
                language: "es",
                autoclose: true,
                todayHighlight: true
            }).on('changeDate', function (e) {
                $("#altdate").val(e.format('yyyy-mm-dd'));
            }
            );
        });
    });
</script>
</div>
</div>