<div class="page-heading">
    <h1>Actualizar Curso</h1>
</div>
<div class="container-fluid">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h2>Datos del Curso</h2>
            <a href="/perfilestudiante" class="btn-warning btn pull-right">
                <</a>
        </div>
        <form action="/actualizarcurso" method="post" class="form-horizontal row-border">
            <input type="hidden" name="uuid" value="">
            {{!-- {{#each data}} --}}
            <div class="panel-body">
                <input type="hidden" name="id" value="{{ID}}">
                <div class="form-group">
                    <label class="col-sm-2 control-label">Nombre</label>
                    <div class="col-xs-3">
                        <input type="text" name="nombreC" onkeypress="return soloLetras(event)" onpaste="return false"
                            maxlength="50" class="form-control" value="{{Nombre}}">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Fecha de Inicio</label>
                    <div class="col-xs-3">
                        <input type="datetime" id="fechaI" name="fechaInicio" class="form-control"
                            placeholder="yyyy-mm-dd" value="{{fechaInicio}}">
                        <input type="hidden" id="altdate" name="altdate" value="" />
                    </div>
                    <label class="col-sm-2 control-label">Fecha de Fin</label>
                    <div class="col-xs-3">
                        <input type="datetime" id="fechaF" name="fechaFin" class="form-control" placeholder="yyyy-mm-dd"
                            value="{{fechaFin}}">
                        <input type="hidden" id="altdate" name="altdate" value="" />
                    </div>
                </div>
            </div>
            {{!-- {{/each}} --}}
            <div class="panel-footer">
                <div class="row">
                    <div class="col-sm-8 col-sm-offset-2">
                        <button type="submit" class="btn-primary btn entity">Actualizar</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $(document).ready(function () {
            $('#nacimiento').datepicker({
                format: "yyyy-mm-dd",
                weekStart: 1,
                language: "es",
                autoclose: true,
                todayHighlight: true
            }).on('changeDate', function (e) {
                $("#altdate").val(e.format('yyyy-mm-dd'));
            }
            );
        });
    });
</script>

</div>
</div>