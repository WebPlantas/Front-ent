<ol class="breadcrumb">
    <li>
        <a href="/profesores">Profesores</a>
    </li>
    <li>
        <a href="/perfilprofesor/{{Id}}">{{Id}}</a>
    </li>
    <li>
        <a href="/actualizarprofesor/{{Id}}">Actualizar</a>
    </li>
    <span id="trigger-sidebar" class="toolbar-trigger toolbar-icon-bg pull-right">
        <a data-toggle="tooltips" data-placement="right" title="Toggle Sidebar">
            <span class="icon-bg">
                <i class="ti ti-shift-left"></i>
            </span>
        </a>
    </span>
</ol>
<div class="page-heading">
    <h1>Actualizar Profesor</h1>
</div>
<div class="container-fluid">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h2>Datos del Profesor</h2>
            <a href="/perfilProfesor/{{Id}}" class="btn-warning btn pull-right">
                <</a>
        </div>
        <form action="/actualizarProfesor" method="post" class="form-horizontal row-border">
            <input type="hidden" name="Id" value="{{Id}}">
            {{#each data}}
            <div class="panel-body">
                <div class="form-group">
                    <label class="col-sm-2 control-label">Documento</label>
                    <div class="col-sm-3">
                        <input type="number" name="cedulaP" class="form-control" placeholder="Sin puntos ni guiones"
                            value="{{Identificacion}}" required>
                    </div>
                    <label class="col-sm-2 control-label">Genero</label>
                    <div class="col-sm-3">
                        <input type="text" name="generoP" class="form-control" placeholder="" value="{{Genero}}"
                            required>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Nombre</label>
                    <div class="col-xs-3">
                        <input type="text" name="nombreP" maxlength="50" onkeypress="return soloLetras(event)"
                            onpaste="return false" class="form-control" value="{{Nombre}}">
                    </div>
                    <label class="col-sm-2 control-label">Apellido</label>
                    <div class="col-xs-3">
                        <input type="text" name="apellidosP" maxlength="70" onkeypress="return soloLetras(event)"
                            onpaste="return false" class="form-control" value="{{Apellidos}}">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Direcci√≥n</label>
                    <div class="col-xs-3">
                        <input type="text" name="direccionP" class="form-control" placeholder="" value="{{Direccion}}"
                            required>
                    </div>

                    <label class="col-sm-2 control-label">Telefono</label>
                    <div class="col-xs-3">
                        <input type="text" name="telefonoP" onkeypress="return soloNumeros(event)" class="form-control"
                            maxlength="10" placeholder="" value="{{Telefono}}" required>
                    </div>

                </div>
            </div>
            {{/each}}
            <div class="panel-footer">
                <div class="row">
                    <div class="col-sm-8 col-sm-offset-2">
                        <button type="submit" class="btn-primary btn entity">Actualizar</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
</div>
</div>