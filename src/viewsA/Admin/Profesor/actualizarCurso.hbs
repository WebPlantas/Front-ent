<div class="container-fluid">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h2>Datos del Curso</h2>
            <a href="/perfilProfesor/{{Id}}" class="btn-warning btn pull-right">
                <</a>
        </div>
        <form action="/actualizarcurso" method="post" class="form-horizontal row-border">
            <input type="hidden" name="uuid" value="">
            {{!-- {{#each data}} --}}
            <div class="panel-body">
                <input type="hidden" name="id" value="{{ID}}">
                <div class="form-group">
                    <label class="col-sm-2 control-label">Nombre</label>
                    <div class="col-sm-3">
                        <input type="text" name="nombreC" onkeypress="return soloLetras(event)" onpaste="return false"
                            maxlength="50" class="form-control" required>
                    </div>
                    <label class="col-sm-2 control-label">Cantidad</label>
                    <div class="col-sm-3">
                        <input type="number" name="cantidadC" onkeypress="return soloNumeros(event)"
                            onpaste="return false" maxlength="2" class="form-control" min="25" max="40" required>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Descripci√≥n: </label>
                    <div class="col-sm-3">
                        <textarea class="form-control" rows="5" name="descripcion" onkeypress="return soloLetras(event)"
                            style="margin: 0px -594.25px 0px 0px; width: 932px; height: 126px;"></textarea> </div>
                </div>
            </div>
            {{!-- {{/each}} --}}
            <div class="panel-footer">
                <div class="row">
                    <div class="col-sm-8 col-sm-offset-2">
                        <button type="submit" class="btn-primary btn entity">Actualizar</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
